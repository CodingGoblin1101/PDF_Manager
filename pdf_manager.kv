ScreenManager:
    MainScreen:
        name: 'MainScreen'
        manager: 'screen_manager'

<MainScreen>
    name:'MainScreen'
    MDButton:
        style: 'filled'
        pos_hint: {"center_x": .3, "center_y": .5}
        on_press: root.convert()
        MDButtonText:
            text: 'convert img to pdf'

    MDButton:
        style: 'filled'
        pos_hint: {"center_x": .5, "center_y": .5}
        on_press: root.merge_pdf()
        MDButtonText:
            text: 'merge pdf'


    MDButton:
        style: 'filled'
        pos_hint: {"center_x": .7, "center_y": .5}
        on_press: root.select_file()
        MDButtonText:
            text: 'split pdf'